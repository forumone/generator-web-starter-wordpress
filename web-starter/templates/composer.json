{
  "name": "<%- name %>",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "wecodemore/wpstarter": "^2.3",
    "wpackagist-plugin/timber-library": "^1.2"
  },
  "require-dev": {
    "wpackagist-plugin/debug-bar": "*"
  },
  "config": {
    "vendor-dir": "public/wp-content/vendor",
    "optimize-autoloader": true
  },
  "scripts": {
    "post-install-cmd": "WCM\\WPStarter\\Setup::run",
    "post-update-cmd": "WCM\\WPStarter\\Setup::run"
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "wordpress-content-dir": "public/wp-content",
    "wpstarter": {
      "prevent-overwrite": [
        ".gitignore",
        "public/wp-config.php",
        "public/index.php"
      ]
    },
    "installer-paths": {
      "public/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "public/wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "public/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  }
}
